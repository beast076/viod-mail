{% extends 'layout.twig' %} {% block body %}
<header class="flex flex-col items-center">
    <p class="text-5xl text-center mb-5 text-gray-200">MailBox</p>
    <h2 class="text-3xl font-bold text-gray-400 mb-5">Sign In</h2>
</header>
<main class="flex flex-col items-center">
    <form
        action="/login"
        method="POST"
        class="border-2 border-gray-400 lg:w-1/3 md:w-1/2 w-full rounded mx-auto bg-gray-900 p-10"
    >
        {% if userInputError %}
        <blockquote class="text-red-500 mb-5">
            Your input was invalid. Please try other values.
        </blockquote>
        {% endif %}
        <div class="flex flex-col mb-5">
            <label
                for="username"
                class="text-gray-200 font-bold"
                id="username_label"
                >Username</label
            >
            <input
                type="text"
                class="p-3 rounded bg-gray-700 text-white focus:outline-none"
                placeholder="Username"
                name="username"
                id="username"
                value="{{ username }}"
            />
        </div>
        <div class="flex flex-col mb-5">
            <label class="text-gray-200 font-bold" for="commentField"
                >Domain</label
            >
            <select
                name="domain"
                class="px-3 py-3 rounded bg-gray-700 text-white focus:outline-none"
                id="commentField"
            >
                <option value="{{ domain }}">@{{ domain }}</option>
            </select>
        </div>
        <button
            class="bg-blue-500 block w-full rounded py-3 hover:bg-blue-600 text-gray-50"
            type="submit"
        >
            Login
        </button>
    </form>
    <div class="lg:w-1/3 md:w-1/2 w-full mt-5">
        <a
            href="/login/random"
            class="border-2 border-blue-500 block w-full rounded py-3 text-center hover:bg-blue-600 text-gray-50"
            >Login to random mailbox</a
        >
    </div>
</main>
{% endblock %}
